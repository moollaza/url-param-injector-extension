{
  "manifest_version": 3,
  "version": "0.1.0",
  "name": "URL Params Injector",
  "description": "Injects URL parameters based on user-defined rules.",
  "icons": {
    "48": "icons/extension_48.png"
  },
  "permissions": [
    "scripting",
    "storage",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background/service_worker.js"
  },
  "action": {
    "default_popup": "action/default_popup.html"
  },
  "options_page": "options_ui/page.html",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; "
  },
  "web_accessible_resources": [
    {
      "resources": [
        "/*.json",
        "/*.js",
        "/*.css",
        "/*.scss",
        "/*.sass",
        "/*.less",
        "*.styl"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}